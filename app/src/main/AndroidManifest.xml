<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pmoloi.cutcrease">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/NoAppBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".presentation.signIn.SignInActivity"
            android:parentActivityName=".presentation.splash.SplashActivity"
            android:theme="@style/NoAppBar" />
        <activity
            android:name=".presentation.signUp.SignUpActivity"
            android:parentActivityName=".presentation.splash.SplashActivity"
            android:theme="@style/NoAppBar" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:theme="@style/NoAppBar" />
        <activity
            android:name=".presentation.category.BlushCategory"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name=".presentation.category.BronzerCategory"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity android:name=".presentation.products.ProductDetailActivity"
            android:theme="@style/NoAppBar"/>
        <activity android:name=".presentation.products.ProductsListViewActivity"></activity>
    </application>

</manifest>